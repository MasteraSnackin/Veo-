# Environment Variables Template
# Copy this file to .env and fill in your API keys
# NEVER commit .env to git (it's in .gitignore)

# ============================================================================
# PRIMARY INTELLIGENCE API
# ============================================================================

# ScanSan Property Intelligence API
SCANSAN_API_KEY=your_scansan_api_key_here
SCANSAN_BASE_URL=https://api.scansan.com/v1

# ============================================================================
# LLM APIS (for explanations and orchestration)
# ============================================================================

# Anthropic Claude API (for natural language explanations)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Perplexity API (optional, for research/fact-checking)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================================================
# VIDEO GENERATION APIS
# ============================================================================

# Google Veo API (preferred for video generation)
GOOGLE_VEO_API_KEY=your_google_veo_api_key_here
GOOGLE_VEO_PROJECT_ID=your_gcp_project_id_here

# OpenAI API (for Sora video generation, fallback)
OPENAI_API_KEY=your_openai_api_key_here

# LTX Studio API (secondary fallback)
LTX_API_KEY=your_ltx_api_key_here

# Nano Video API (fast/cheap fallback)
NANO_API_KEY=your_nano_api_key_here

# ============================================================================
# ENRICHMENT DATA APIS
# ============================================================================

# Transport for London (TfL) API
TFL_APP_KEY=your_tfl_app_key_here
TFL_APP_ID=your_tfl_app_id_here

# Google Maps Platform APIs (Maps, Places, Directions)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# UK Postcode API (for geocoding)
# Using postcodes.io (free, no key needed) by default
# POSTCODE_API_KEY=optional_if_using_paid_service

# ============================================================================
# OPTIONAL ENRICHMENT APIS
# ============================================================================

# ONS (Office for National Statistics) - open data, no key needed
# Schools data (Get Information About Schools) - open API, no key needed
# data.police.uk - open API, no key needed
# OpenStreetMap Overpass API - open, no key needed

# US Data (optional, for US demo)
# ZILLOW_API_KEY=your_zillow_api_key_here
# CENSUS_API_KEY=your_us_census_api_key_here

# ============================================================================
# DATABASE & CACHING
# ============================================================================

# PostgreSQL Database (Supabase or other)
DATABASE_URL=postgresql://user:password@host:port/database

# Supabase (if using)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Upstash Redis (HTTP-based, serverless-friendly)
# Sign up at https://upstash.com/ for free tier (10K commands/day)
UPSTASH_REDIS_REST_URL=https://your-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Redis (optional, traditional Redis)
REDIS_URL=redis://localhost:6379

# ============================================================================
# CDN & STORAGE
# ============================================================================

# Cloud storage for videos/assets
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_REGION=us-east-1

# ============================================================================
# SERVERLESS INFRASTRUCTURE
# ============================================================================

# Modal Serverless Functions (optional, for production scaling)
# Deploy modal_config.py first to get your endpoint URL
MODAL_ENDPOINT_URL=https://your-workspace--your-function.modal.run
USE_MODAL=false  # Set to 'true' to use Modal instead of local Python

# Python Command (for local execution)
PYTHON_COMMAND=python  # or python3, py, etc.

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
NODE_ENV=development

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Rate limiting and caching
RATE_LIMIT_ENABLED=true
CACHE_TTL_HOURS=24

# Logging
LOG_LEVEL=info
